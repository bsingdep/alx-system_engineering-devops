#!/usr/bin/env bash
# This bash script installs and configures a load balancer on a server

apt-get update
apt-get install haproxy -y

printf %s "frontend front
        bind *:80
        mode http
        default_backend back

backend back
        balance roundrobin
        server 32024-web-01 44.192.38.74.80 check
        server 32024-web-01 35.174.176.158:80 check
" >> /etc/haproxy/haproxy.cfg
